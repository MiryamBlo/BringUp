        }
        
        // Auto-refresh config every 30 seconds
        setInterval(() => {
            fetch('/get_config')
            .then(response => response.json())
            .then(data => {
                document.getElementById('config-file').textContent = data.config_file;
                document.getElementById('project-name').textContent = data.project_name;
                document.getElementById('build-type').textContent = data.build_type;
            });
        }, 30000);
    </script>
</body>
</html>'''

@app.route('/')
def index():
    config_data = load_config()
    return render_template_string(HTML_TEMPLATE, **config_data)

@app.route('/get_config')
def get_config():
    return jsonify(load_config())

@app.route('/execute', methods=['POST'])
def execute():
    global current_process, is_running, output_queue
    
    if is_running:
        return jsonify({'success': False, 'message': 'Another command is already running'})
    
    data = request.json
    options = data.get('options', '')
    description = data.get('description', '')
    
    # Clear output queue
    while not output_queue.empty():
        output_queue.get()
    
    # Start command in thread
    thread = threading.Thread(target=run_command, args=(options, description))
    thread.daemon = True
    thread.start()
    
    return jsonify({'success': True})

@app.route('/get_output')
def get_output():
    global is_running
    
    output_lines = []
    while not output_queue.empty():
        output_lines.append(output_queue.get())
    
    return jsonify({
        'output': output_lines,
        'finished': not is_running,
        'success': getattr(current_process, 'returncode', 0) == 0 if current_process else False,
        'status': 'Ready' if not is_running else 'Running...',
        'description': getattr(current_process, 'description', '')
    })

def load_config():
    """Load configuration from file"""
    config_data = {
        'config_file': str(config_file.name),
        'project_name': 'N/A',
        'build_type': 'N/A'
    }
    
    try:
        if config_file.exists():
            with open(config_file, 'r') as f:
                for line in f:
                    line = line.strip()
                    if line and not line.startswith('#') and '=' in line:
                        key, value = line.split('=', 1)
                        key = key.strip()
                        value = value.strip()
                        if key == 'PROJECT_NAME':
                            config_data['project_name'] = value
                        elif key == 'BUILD_TYPE':
                            config_data['build_type'] = value
    except Exception as e:
        print(f"Error loading config: {e}")
    
    return config_data

def run_command(options, description):
    """Run build automation command"""
    global current_process, is_running
    
    is_running = True
    output_queue.put(f"\n{'='*60}")
    output_queue.put(f"Executing: {description}")
    output_queue.put(f"Config: {config_file}")
    output_queue.put(f"Command: {build_script} -c {config_file} {options}")
    output_queue.put(f"{'='*60}\n")
    
    try:
        cmd = [str(build_script), "-c", str(config_file)] + options.split()
        
        current_process = subprocess.Popen(
            cmd,
            stdout=subprocess.PIPE,
            stderr=subprocess.STDOUT,
            universal_newlines=True,
            bufsize=1
        )
        current_process.description = description
        
        for line in current_process.stdout:
            output_queue.put(line.rstrip())
        
        current_process.wait()
        
        if current_process.returncode == 0:
            output_queue.put(f"\n‚úì {description} completed successfully!\n")
        else:
            output_queue.put(f"\n‚úó {description} failed with exit code {current_process.returncode}\n")
    
    except Exception as e:
        output_queue.put(f"\n‚úó Error: {str(e)}\n")
        if current_process:
            current_process.returncode = 1
    
    finally:
        is_running = False

def render_template_string(template, **context):
    """Simple template renderer"""
    for key, value in context.items():
        template = template.replace('{{ ' + key + ' }}', str(value))
    return template

